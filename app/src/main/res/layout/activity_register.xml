<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_green_light"
    android:orientation="vertical">

    <EditText
        android:id="@+id/username_editText_registerActivity"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="128dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/rounded_edit_text"
        android:ems="10"
        android:hint="Username"
        android:inputType="textPersonName"
        android:paddingLeft="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.545"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/email_editText_registerActivity"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Email"
        android:paddingLeft="16sp"
        android:background="@drawable/rounded_edit_text"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/username_editText_registerActivity"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/username_editText_registerActivity"
        app:layout_constraintTop_toBottomOf="@+id/username_editText_registerActivity" />

    <EditText
        android:id="@+id/password_editText_registerActivity"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:paddingLeft="16sp"
        android:background="@drawable/rounded_edit_text"
        app:layout_constraintEnd_toEndOf="@+id/email_editText_registerActivity"
        app:layout_constraintStart_toStartOf="@+id/email_editText_registerActivity"
        app:layout_constraintTop_toBottomOf="@+id/email_editText_registerActivity" />

    <EditText
        android:id="@+id/fullname_editText_registerActivity"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Full Name"
        android:paddingLeft="16sp"
        android:background="@drawable/rounded_edit_text"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/password_editText_registerActivity"
        app:layout_constraintStart_toStartOf="@+id/password_editText_registerActivity"
        app:layout_constraintTop_toBottomOf="@+id/password_editText_registerActivity" />

    <EditText
        android:id="@+id/phoneNumber_editText_registerActivity"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Phone Number"
        android:inputType="textPersonName"
        android:paddingLeft="16sp"
        android:background="@drawable/rounded_edit_text"
        app:layout_constraintEnd_toEndOf="@+id/fullname_editText_registerActivity"
        app:layout_constraintStart_toStartOf="@+id/fullname_editText_registerActivity"
        app:layout_constraintTop_toBottomOf="@+id/fullname_editText_registerActivity" />

    <CheckBox
        android:id="@+id/admin_checkBox_registerActivity"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="64dp"
        android:text="Register as admin"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/phoneNumber_editText_registerActivity"
        app:layout_constraintStart_toStartOf="@+id/phoneNumber_editText_registerActivity"
        app:layout_constraintTop_toBottomOf="@+id/phoneNumber_editText_registerActivity" />

    <Button
        android:id="@+id/register_button_registerActivity"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/rounded_button"
        android:text="Register"
        app:layout_constraintEnd_toEndOf="@+id/admin_checkBox_registerActivity"
        app:layout_constraintStart_toStartOf="@+id/admin_checkBox_registerActivity"
        app:layout_constraintTop_toBottomOf="@+id/admin_checkBox_registerActivity" />

    <TextView
        android:id="@+id/alreadyHaveAnAccount_textView_registerActivity"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:text="Already have an account?"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/register_button_registerActivity"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/register_button_registerActivity"
        app:layout_constraintTop_toBottomOf="@+id/register_button_registerActivity" />
</androidx.constraintlayout.widget.ConstraintLayout>