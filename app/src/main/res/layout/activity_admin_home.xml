<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/holo_green_light">

    <Button
        android:id="@+id/updateInventory_button_adminHomeActivity"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="108dp"
        android:layout_marginEnd="64dp"
        android:background="@drawable/rounded_button"
        android:text="Update Inventory"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/addMeds_button_adminHomeActivity"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/rounded_button"
        android:text="Add medicine"
        app:layout_constraintEnd_toEndOf="@+id/updateInventory_button_adminHomeActivity"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/updateInventory_button_adminHomeActivity"
        app:layout_constraintTop_toBottomOf="@+id/updateInventory_button_adminHomeActivity" />

    <Button
        android:id="@+id/updateHospitalList_button_adminHomeActivity"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/rounded_button"
        android:text="Update Hospital List"
        app:layout_constraintEnd_toEndOf="@+id/addMeds_button_adminHomeActivity"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/addMeds_button_adminHomeActivity"
        app:layout_constraintTop_toBottomOf="@+id/addMeds_button_adminHomeActivity" />

    <Button
        android:id="@+id/checkOrders_button_adminHomeActivity"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/rounded_button"
        android:text="Check Orders"
        app:layout_constraintEnd_toEndOf="@+id/updateHospitalList_button_adminHomeActivity"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/updateHospitalList_button_adminHomeActivity"
        app:layout_constraintTop_toBottomOf="@+id/updateHospitalList_button_adminHomeActivity" />

    <Button
        android:id="@+id/contactDeliveryMan_button_adminHomeActivity"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/rounded_button"
        android:text="Contact Delivery Man"
        app:layout_constraintEnd_toEndOf="@+id/checkOrders_button_adminHomeActivity"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/checkOrders_button_adminHomeActivity"
        app:layout_constraintTop_toBottomOf="@+id/checkOrders_button_adminHomeActivity" />

    <Button
        android:id="@+id/checkMedicines_button_adminHomeActivity"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="32dp"
        android:text="Check Medicines"
        android:background="@drawable/rounded_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/contactDeliveryMan_button_adminHomeActivity"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="@+id/contactDeliveryMan_button_adminHomeActivity"
        app:layout_constraintTop_toBottomOf="@+id/contactDeliveryMan_button_adminHomeActivity"
        app:layout_constraintVertical_bias="0.0" />
</androidx.constraintlayout.widget.ConstraintLayout>