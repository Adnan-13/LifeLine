<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_green_light"
    tools:context=".LoginActivity" >

    <EditText
        android:id="@+id/email_editText_loginActivity"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="212dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/rounded_edit_text"
        android:ems="10"
        android:hint="Email"
        android:inputType="textPersonName"
        android:paddingLeft="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/login_button_loginActivity"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="16dp"
        android:text="Login"
        android:background="@drawable/rounded_button"
        app:layout_constraintEnd_toEndOf="@+id/password_editText_loginActivity"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/password_editText_loginActivity"
        app:layout_constraintTop_toBottomOf="@+id/password_editText_loginActivity" />

    <TextView
        android:id="@+id/dontHaveAnAccount_textView_loginActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:text="Don't have an account?"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/login_button_loginActivity"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="@+id/login_button_loginActivity"
        app:layout_constraintTop_toBottomOf="@+id/login_button_loginActivity"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/password_editText_loginActivity"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/rounded_edit_text"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:paddingLeft="16sp"
        app:layout_constraintEnd_toEndOf="@+id/email_editText_loginActivity"
        app:layout_constraintStart_toStartOf="@+id/email_editText_loginActivity"
        app:layout_constraintTop_toBottomOf="@+id/email_editText_loginActivity" />

</androidx.constraintlayout.widget.ConstraintLayout>